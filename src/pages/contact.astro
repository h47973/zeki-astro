---
import BaseLayout from '../layouts/BaseLayout.astro';

const offices = [
  {
    country: "United States",
    flag: "fi fi-ss-flag",
    address: "1049 El Monte Avenue Ste C #684",
    city: "Mountain View, CA 94040",
    phone: "+1 (202) 992-5235",
    email: "usa@zekiexperts.com",
    timezone: "PST (UTC-8)",
    coords: { lat: 37.3861, lng: -122.0839, name: "Mountain View" },
    color: "#3b82f6"
  },
  {
    country: "Pakistan",
    flag: "fi fi-ss-flag", 
    address: "Kickstart Building, 189 Korang Road, I-10/3",
    city: "Islamabad, Islamabad Capital Territory",
    phone: "+92 331 1110214",
    email: "pk@zekiexperts.com",
    timezone: "PKT (UTC+5)",
    coords: { lat: 33.6844, lng: 73.0479, name: "Islamabad" },
    color: "#06b6d4"
  }
];

const faqs = [
  {
    question: "How quickly can you match me with developers?",
    answer: "We typically match clients with suitable developers within 24-48 hours after understanding your requirements."
  },
  {
    question: "What is your vetting process for developers?",
    answer: "Our developers undergo technical assessments, portfolio reviews, and interviews to ensure they meet our quality standards."
  },
  {
    question: "Do you offer project management services?",
    answer: "Yes, we provide optional project management services to help coordinate development work and ensure timely delivery."
  },
  {
    question: "What technologies do your developers specialize in?",
    answer: "We specialize in modern web and mobile technologies including React, Node.js, Python, React Native, Flutter, AWS, and more. Our team stays up-to-date with the latest industry trends."
  }
];
---

<BaseLayout title="Contact Zeki Experts - Get Expert Developers in 24 Hours">
  <!-- Hero Section with Advanced Animations -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-blue-900">
    <!-- Particle Canvas -->
    <div class="absolute inset-0">
      <canvas id="contact-particles" class="w-full h-full"></canvas>
    </div>
    
    <!-- Floating Tech Shapes -->
    <div class="absolute inset-0">
      <div class="floating-tech tech-1"></div>
      <div class="floating-tech tech-2"></div>
      <div class="floating-tech tech-3"></div>
      <div class="floating-tech tech-4"></div>
    </div>
    
    <!-- Morphing Background Shapes -->
    <div class="absolute inset-0">
      <div class="morph-shape morph-1"></div>
      <div class="morph-shape morph-2"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Animated Badge -->
      <div class="animated-badge mb-8">
        <span class="pulse-dot"></span>
        Expert Developers in 24 Hours
      </div>
      
      <!-- Main Title with Staggered Animation -->
      <h1 class="hero-title mb-6">
        <span class="title-line">Connect with</span>
        <span class="title-line gradient-text">Top Developers</span>
      </h1>
      
      <!-- Enhanced Subtitle -->
      <p class="hero-subtitle mb-12">
        Get matched with vetted software developers, designers, and technical experts
        who can start working on your project immediately.
      </p>
      
      <!-- CTA Buttons -->
      <div class="cta-buttons">
        <a href="#contact-form" class="cta-primary">
          <span>Get Started Today</span>
          <div class="button-shine"></div>
        </a>
        
        <div class="contact-info">
          <span>Call us: </span>
          <a href="tel:+12029925235" class="phone-link">+1 (202) 992-5235</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-white dark:bg-gray-900 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="animated-grid"></div>
    </div>
    
    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="section-title mb-6">Why Choose Zeki Experts?</h2>
        <div class="title-underline mx-auto"></div>
        <p class="section-subtitle mt-6">
          Trusted by businesses worldwide for our expertise and reliability
        </p>
      </div>
      
      <div class="stats-grid">
        <div class="stat-card card-tinted" data-aos="zoom-in" data-aos-delay="0">
          <div class="stat-icon"><i class="fi fi-ss-bolt"></i></div>
          <div class="stat-number">24h</div>
          <div class="stat-label">Average Match Time</div>
        </div>
        
        <div class="stat-card card-tinted" data-aos="zoom-in" data-aos-delay="100">
          <div class="stat-icon">üë•</div>
          <div class="stat-number">500+</div>
          <div class="stat-label">Expert Developers</div>
        </div>
        
        <div class="stat-card card-tinted" data-aos="zoom-in" data-aos-delay="200">
          <div class="stat-icon"><i class="fi fi-ss-target"></i></div>
          <div class="stat-number">98%</div>
          <div class="stat-label">Success Rate</div>
        </div>
        
        <div class="stat-card card-tinted" data-aos="zoom-in" data-aos-delay="300">
          <div class="stat-icon">üåç</div>
          <div class="stat-number">50+</div>
          <div class="stat-label">Countries Served</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Offices Section -->
  <section class="py-32 bg-white dark:bg-gray-900 relative overflow-hidden">
    <!-- Morphing Background -->
    <div class="absolute inset-0">
      <div class="morph-shape morph-office-1"></div>
      <div class="morph-shape morph-office-2"></div>
    </div>
    
    <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="section-title mb-6">Our Global Offices</h2>
        <div class="title-underline mx-auto"></div>
        <p class="section-subtitle mt-6">
          Strategically located offices to serve clients across different time zones
        </p>
      </div>
      
      <div class="flex justify-center">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
          {offices.map((office, index) => (
            <div class="office-card card-tinted">
            
            <div class="relative">
              <!-- Flag Icon -->
              <div class="office-flag"><i class={office.flag}></i></div>
              
              <!-- Country Name -->
              <h3 class="office-country">{office.country}</h3>
              
              <!-- Address Info -->
              <div class="office-address">
                <p>{office.address}</p>
                <p>{office.city}</p>
              </div>
              
              <!-- Contact Info -->
              <div class="office-contact">
                <a href={`tel:${office.phone}`} class="contact-link phone">
                  <span class="contact-icon"><i class="fi fi-ss-phone-call"></i></span>
                  {office.phone}
                </a>
                <a href={`mailto:${office.email}`} class="contact-link email">
                  <span class="contact-icon"><i class="fi fi-ss-envelope"></i></span>
                  {office.email}
                </a>
              </div>
              
              <!-- Timezone Badge -->
              <div class="timezone-badge">
                <span class="timezone-icon">üïê</span>
                <span>{office.timezone}</span>
              </div>
              
              <!-- Glow Effect -->
              <div class="office-glow"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section with Animations -->
  <section class="py-32 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-20">
        <h2 class="section-title mb-6">Frequently Asked Questions</h2>
        <div class="title-underline mx-auto"></div>
        <p class="section-subtitle mt-6">
          Everything you need to know about working with our expert developers
        </p>
      </div>
      
      <div class="faq-container">
        {faqs.map((faq, index) => (
          <div class="faq-item card-tinted" data-aos="fade-up" data-aos-delay={(index * 100).toString()}>
            <details class="faq-details group">
              <summary class="faq-question">
                <h3 class="question-text">{faq.question}</h3>
                <div class="question-icon">
                  <svg class="chevron" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </summary>
              <div class="faq-answer">
                <p>{faq.answer}</p>
              </div>
            </details>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section with Advanced Animations -->
  <section class="py-32 bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600 relative overflow-hidden animated-gradient">
    <!-- Animated Background Pattern -->
    <div class="absolute inset-0 opacity-20">
      <div class="animated-pattern"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="cta-title mb-8">
        Ready to Find Your Perfect Developer?
      </h2>
      <p class="cta-subtitle mb-12">
        Join thousands of businesses who trust Zeki Experts for their development needs.
        Get matched with the right talent in just 24 hours.
      </p>
      
      <div class="cta-buttons">
        <a href="#contact-form" class="cta-primary">
          <span>Start Your Project Today</span>
          <div class="button-shine"></div>
        </a>
        
        <div class="contact-info">
          <span>Call us: </span>
          <a href="tel:+12029925235" class="phone-link">+1 (202) 992-5235</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Advanced Contact Form Section -->
  <section id="contact-form" class="py-32 bg-gray-50 dark:bg-gray-800 relative overflow-hidden">
    <!-- Grid Background -->
    <div class="absolute inset-0 opacity-5">
      <div class="grid-pattern"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="section-title mb-6">Let's Start Your Project</h2>
        <div class="title-underline mx-auto"></div>
        <p class="section-subtitle mt-6">
          Tell us about your project requirements and we'll match you with the perfect developers
        </p>
      </div>
      
      <div class="form-container">
        <form class="contact-form" action="/api/contact" method="POST">
          <div class="form-grid">
            <div class="form-group">
              <label for="name" class="form-label">Full Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="form-input"
                placeholder="Your full name"
              />
            </div>
            
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="form-input"
                placeholder="your.email@company.com"
              />
            </div>
            
            <div class="form-group">
              <label for="company" class="form-label">Company Name</label>
              <input
                type="text"
                id="company"
                name="company"
                class="form-input"
                placeholder="Your company name"
              />
            </div>
            
            <div class="form-group">
              <label for="phone" class="form-label">Phone Number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-input"
                placeholder="+1 (555) 123-4567"
              />
            </div>
          </div>
          
          <div class="form-group">
            <label for="project" class="form-label">Project Description</label>
            <textarea
              id="project"
              name="project"
              required
              rows="6"
              class="form-input"
              placeholder="Tell us about your project requirements, technologies needed, timeline, and team size..."
            ></textarea>
          </div>
          
          <div class="form-submit-container">
            <button type="submit" class="form-submit">
              <span>Send Project Details</span>
              <svg class="submit-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Contact Methods Grid -->
  <section class="py-24 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="contact-methods-grid">
        <div class="contact-method" data-aos="fade-up" data-aos-delay="0">
          <div class="contact-method-icon"><i class="fi fi-ss-phone-call"></i></div>
          <h3 class="contact-method-title">Call Us</h3>
          <p class="contact-method-description">
            Speak directly with our team about your project requirements
          </p>
          <a href="tel:+12029925235" class="contact-method-link">+1 (202) 992-5235</a>
        </div>
        
        <div class="contact-method" data-aos="fade-up" data-aos-delay="100">
          <div class="contact-method-icon"><i class="fi fi-ss-envelope"></i></div>
          <h3 class="contact-method-title">Email Us</h3>
          <p class="contact-method-description">
            Send us detailed project requirements and we'll respond within 2 hours
          </p>
          <a href="mailto:hello@zekiexperts.com" class="contact-method-link">hello@zekiexperts.com</a>
        </div>
        
        <div class="contact-method" data-aos="fade-up" data-aos-delay="200">
          <div class="contact-method-icon"><i class="fi fi-ss-comment"></i></div>
          <h3 class="contact-method-title">Live Chat</h3>
          <p class="contact-method-description">
            Get instant answers to your questions from our support team
          </p>
          <button class="contact-method-link chat-trigger">Start Chat</button>
        </div>
      </div>
    </div>
  </section>

  <!-- Advanced Styles and Animations -->
  <style>
    /* Floating Tech Icon Shapes */
    .floating-tech {
      position: absolute;
      background: linear-gradient(45deg, rgba(59, 130, 246, 0.15), rgba(147, 51, 234, 0.15));
      border: 1px solid rgba(59, 130, 246, 0.2);
      border-radius: 16px;
      animation: float-contact 32s infinite ease-in-out;
      backdrop-filter: blur(15px);
    }
    
    .tech-1 { width: 90px; height: 90px; top: 8%; left: 14%; animation-delay: 0s; }
    .tech-2 { width: 70px; height: 70px; top: 18%; right: 22%; animation-delay: 8s; }
    .tech-3 { width: 80px; height: 80px; top: 58%; left: 20%; animation-delay: 16s; }
    .tech-4 { width: 75px; height: 75px; top: 68%; right: 28%; animation-delay: 24s; }
    
    @keyframes float-contact {
      0%, 100% { transform: translate(0px, 0px) rotate(0deg) scale(1); opacity: 0.4; }
      25% { transform: translate(18px, -28px) rotate(3deg) scale(1.1); opacity: 0.7; }
      50% { transform: translate(-22px, 32px) rotate(-3deg) scale(0.9); opacity: 0.3; }
      75% { transform: translate(28px, 18px) rotate(2deg) scale(1.05); opacity: 0.8; }
    }
    
    /* Morphing Background Shapes */
    .morph-shape {
      position: absolute;
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      animation: morph-contact 29s ease-in-out infinite;
      opacity: 0.12;
    }
    
    .dark .morph-shape {
      opacity: 0.1;
    }
    
    .morph-1 {
      width: 420px;
      height: 420px;
      background: linear-gradient(45deg, #3b82f6, #8b5cf6);
      top: 3%;
      left: 1%;
      animation-delay: 0s;
    }
    
    .morph-2 {
      width: 340px;
      height: 340px;
      background: linear-gradient(45deg, #8b5cf6, #06b6d4);
      bottom: 8%;
      right: 3%;
      animation-delay: 14s;
    }
    
    .morph-office-1 {
      width: 380px;
      height: 380px;
      background: linear-gradient(45deg, #06b6d4, #3b82f6);
      top: 12%;
      left: 2%;
      animation-delay: 8s;
    }
    
    .morph-office-2 {
      width: 400px;
      height: 400px;
      background: linear-gradient(45deg, #8b5cf6, #06b6d4);
      bottom: 12%;
      right: 6%;
      animation-delay: 22s;
    }
    
    @keyframes morph-contact {
      0%, 100% { 
        border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        transform: translate(0px, 0px) rotate(0deg);
      }
      50% { 
        border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
        transform: translate(55px, -55px) rotate(180deg);
      }
    }
    
    /* Animated Badge */
    .animated-badge {
      display: inline-flex;
      align-items: center;
      padding: 16px 32px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 50px;
      color: #3b82f6;
      font-weight: 600;
      font-size: 0.95rem;
      animation: badge-float 3s ease-in-out infinite;
    }
    
    .dark .animated-badge {
      color: #60a5fa;
    }
    
    .pulse-dot {
      width: 10px;
      height: 10px;
      background: #3b82f6;
      border-radius: 50%;
      margin-right: 12px;
      animation: pulse-glow 2s ease-in-out infinite;
    }
    
    @keyframes badge-float {
      0%, 100% { transform: translateY(0px); box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2); }
      50% { transform: translateY(-5px); box-shadow: 0 20px 40px rgba(59, 130, 246, 0.4); }
    }
    
    @keyframes pulse-glow {
      0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
      50% { transform: scale(1.1); box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
    }
    
    /* Hero Title Animation */
    .hero-title {
      font-size: clamp(3rem, 8vw, 7rem);
      font-weight: 900;
      line-height: 1.1;
      color: #1f2937;
      text-align: center;
      overflow: hidden;
    }
    
    .dark .hero-title {
      color: #ffffff;
    }
    
    .dark .hero-title {
      color: #ffffff;
    }
    
    .title-line {
      display: block;
      animation: slide-up-stagger 1.2s cubic-bezier(0.23, 1, 0.32, 1);
    }
    
    .title-line:nth-child(2) {
      animation-delay: 0.2s;
    }
    
    .gradient-text {
      background: linear-gradient(45deg, #3b82f6, #8b5cf6, #06b6d4);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      background-size: 200% 200%;
      animation: gradient-shift 3s ease-in-out infinite;
    }
    
    @keyframes slide-up-stagger {
      0% { transform: translateY(100%); opacity: 0; }
      100% { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    
    /* Hero Subtitle */
    .hero-subtitle {
      font-size: clamp(1.125rem, 3vw, 1.5rem);
      color: #6b7280;
      max-width: 800px;
      margin: 0 auto;
      line-height: 1.6;
      animation: fade-in-up 1.5s cubic-bezier(0.23, 1, 0.32, 1) 0.4s both;
    }
    
    .dark .hero-subtitle {
      color: #ffffff !important;
      font-weight: 500;
    }
    
    @keyframes fade-in-up {
      0% { transform: translateY(30px); opacity: 0; }
      100% { transform: translateY(0); opacity: 1; }
    }
    
    /* Section Styling */
    .section-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
      font-weight: 900;
      color: #1f2937;
      text-align: center;
    }
    
    .dark .section-title {
      color: #ffffff;
    }
    
    .dark .section-title {
      color: #ffffff;
      text-shadow: 0 0 30px rgba(59, 130, 246, 0.5);
    }
    
    .section-subtitle {
      font-size: 1.25rem;
      color: #6b7280;
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.7;
    }
    
    .dark .section-subtitle {
      color: #ffffff !important;
      font-weight: 500;
    }
    
    .title-underline {
      width: 80px;
      height: 4px;
      background: linear-gradient(45deg, #3b82f6, #8b5cf6);
      border-radius: 2px;
      animation: expand-underline 2s cubic-bezier(0.23, 1, 0.32, 1);
    }
    
    @keyframes expand-underline {
      0% { width: 0; }
      100% { width: 80px; }
    }
    
    /* Stats Grid */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }
    
    .stat-card {
      text-align: center;
      padding: 2rem 1rem;
      background: linear-gradient(135deg, rgba(249, 115, 22, 0.1), rgba(239, 68, 68, 0.15));
      backdrop-filter: blur(20px);
      border: 1px solid rgba(249, 115, 22, 0.2);
      border-radius: 20px;
      transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
      animation: stat-bounce 2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
      box-shadow: 0 8px 32px rgba(249, 115, 22, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    
    .dark .stat-card {
      background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(239, 68, 68, 0.25));
      backdrop-filter: blur(20px);
      border: 1px solid rgba(239, 68, 68, 0.3);
      box-shadow: 0 8px 32px rgba(239, 68, 68, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
    
    .stat-card:hover {
      transform: translateY(-10px) scale(1.05);
      box-shadow: 0 20px 40px rgba(59, 130, 246, 0.4);
    }
    
    .stat-icon {
      font-size: 2rem;
    }
    
    .stat-number {
      font-size: 2.5rem;
      font-weight: 900;
      color: #1f2937;
    }
    
    .dark .stat-number {
      color: #ffffff;
    }
    
    .dark .stat-number {
      color: #ffffff;
    }
    
    .stat-label {
      font-size: 0.875rem;
      color: #6b7280;
      font-weight: 500;
    }
    
    .dark .stat-label {
      color: #d1d5db;
    }
    
    @keyframes stat-bounce {
      0% { transform: scale(0.3) rotate(-10deg); opacity: 0; }
      50% { transform: scale(1.1) rotate(5deg); }
      100% { transform: scale(1) rotate(0deg); opacity: 1; }
    }
    
    /* Form Container */
    .form-container {
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(6, 182, 212, 0.15));
      backdrop-filter: blur(20px);
      border: 1px solid rgba(16, 185, 129, 0.2);
      border-radius: 30px;
