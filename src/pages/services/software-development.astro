---
import BaseLayout from '../../layouts/BaseLayout.astro';

const technologies = [
  {
    category: "Frontend",
    items: ["React", "JavaScript", "PHP", "WordPress", "Angular"]
  },
  {
    category: "Backend", 
    items: ["Node.js", "Laravel", "Ruby on Rails", "Spring", "Python"]
  },
  {
    category: "Database",
    items: ["MySQL", "Oracle", "MongoDB", "PostgreSQL"]
  }
];

const benefits = [
  {
    title: "Hand-Vetted Developers",
    description: "Access to pre-screened professionals with proven expertise in modern software development"
  },
  {
    title: "24-Hour Matching",
    description: "Get connected with qualified software developers within 24 hours of your request"
  },
  {
    title: "Timezone Alignment",
    description: "Work with developers who match your preferred working hours and communication style"
  },
  {
    title: "Scalable Teams",
    description: "Easily scale your development team up or down based on project requirements"
  }
];
---

<BaseLayout title="Software Development Services">
  <!-- Hero Section -->
  <section class="py-24 lg:py-32 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-black dark:text-white mb-6">
        Software Development
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 leading-relaxed mb-8">
        Custom software solutions built with modern technologies and industry best practices.
        Hire expert developers within 24 hours.
      </p>
      <a href="/contact" class="bg-black text-white px-8 py-4 rounded-lg font-medium hover:bg-gray-800 transition-colors">
        Hire Developers Now
      </a>
    </div>
  </section>

  <!-- Technologies Section -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          Our Technology Stack
        </h2>
        <p class="text-xl text-gray-600">
          Modern technologies for scalable, maintainable software solutions
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {technologies.map((tech) => (
          <div class="bg-white p-8 rounded-xl border border-gray-200">
            <h3 class="text-xl font-semibold text-black dark:text-white mb-6">{tech.category}</h3>
            <div class="space-y-3">
              {tech.items.map((item) => (
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-blue-600 rounded-full mr-3"></div>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          Why Choose Our Developers
        </h2>
        <p class="text-xl text-gray-600">
          The advantages of working with Zeki Experts for your software development needs
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {benefits.map((benefit) => (
          <div class="p-8 border border-gray-200 rounded-xl">
            <h3 class="text-lg font-semibold text-black dark:text-white mb-3">
              {benefit.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {benefit.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          How It Works
        </h2>
        <p class="text-xl text-gray-600">
          Simple steps to get started with expert software developers
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            1
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Tell Us Your Needs</h3>
          <p class="text-gray-600 text-sm">Share your project requirements, timeline, and preferred technologies</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            2
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Get Matched in 24hrs</h3>
          <p class="text-gray-600 text-sm">We connect you with pre-vetted developers who fit your requirements</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-blue-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            3
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Start Building</h3>
          <p class="text-gray-600 text-sm">Begin your project with confidence, knowing you have the right team</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Start Your Software Project?
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Connect with expert developers who can bring your vision to life with modern technologies and best practices.
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/contact" class="bg-white dark:bg-gray-800 text-black dark:text-white px-8 py-4 rounded-lg font-medium hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
          Get Started Today
        </a>
        <div class="text-gray-400">
          Call: <a href="tel:+12029925235" class="text-white hover:text-gray-300">+1 (202) 992-5235</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>