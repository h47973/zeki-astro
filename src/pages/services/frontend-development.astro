---
import BaseLayout from '../../layouts/BaseLayout.astro';

const technologies = [
  {
    category: "Modern Frameworks",
    items: ["React", "Angular", "Vue.js", "Next.js"]
  },
  {
    category: "Core Technologies", 
    items: ["JavaScript", "TypeScript", "HTML5", "CSS3"]
  },
  {
    category: "Content Management",
    items: ["WordPress", "PHP", "Headless CMS"]
  }
];

const specialties = [
  {
    title: "Responsive Design",
    description: "Mobile-first interfaces that work perfectly across all devices and screen sizes"
  },
  {
    title: "Performance Optimization", 
    description: "Fast-loading, optimized websites with excellent Core Web Vitals scores"
  },
  {
    title: "User Experience",
    description: "Intuitive, accessible interfaces designed with your users in mind"
  },
  {
    title: "Modern Development",
    description: "Latest tools and frameworks for maintainable, scalable frontend solutions"
  }
];
---

<BaseLayout title="Frontend Development Services">
  <!-- Hero Section -->
  <section class="py-24 lg:py-32 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-black dark:text-white mb-6">
        Frontend Development
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 leading-relaxed mb-8">
        Modern, responsive web interfaces with excellent user experience.
        Connect with expert frontend developers within 24 hours.
      </p>
      <a href="/contact" class="bg-black text-white px-8 py-4 rounded-lg font-medium hover:bg-gray-800 transition-colors">
        Find Frontend Developers
      </a>
    </div>
  </section>

  <!-- Technologies Section -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          Frontend Technologies
        </h2>
        <p class="text-xl text-gray-600">
          Modern tools and frameworks for exceptional user interfaces
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {technologies.map((tech) => (
          <div class="bg-white p-8 rounded-xl border border-gray-200">
            <h3 class="text-xl font-semibold text-black dark:text-white mb-6">{tech.category}</h3>
            <div class="space-y-3">
              {tech.items.map((item) => (
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-purple-600 rounded-full mr-3"></div>
                  <span class="text-gray-700">{item}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Specialties Section -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          Our Frontend Expertise
        </h2>
        <p class="text-xl text-gray-600">
          Creating exceptional user experiences across all platforms
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {specialties.map((specialty) => (
          <div class="p-8 border border-gray-200 rounded-xl">
            <h3 class="text-lg font-semibold text-black dark:text-white mb-3">
              {specialty.title}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {specialty.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-black dark:text-white mb-4">
          Frontend Development Process
        </h2>
        <p class="text-xl text-gray-600">
          From design to deployment, we ensure quality at every step
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-12 h-12 bg-purple-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            1
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Design Analysis</h3>
          <p class="text-gray-600 text-sm">Review designs and plan optimal implementation approach</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-purple-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            2
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Component Development</h3>
          <p class="text-gray-600 text-sm">Build reusable, maintainable components with modern frameworks</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-purple-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            3
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Testing & Optimization</h3>
          <p class="text-gray-600 text-sm">Comprehensive testing and performance optimization across devices</p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-purple-600 text-white rounded-xl flex items-center justify-center font-bold text-lg mb-4 mx-auto">
            4
          </div>
          <h3 class="text-lg font-semibold text-black dark:text-white mb-3">Launch & Maintenance</h3>
          <p class="text-gray-600 text-sm">Smooth deployment and ongoing support for your frontend</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Build Amazing User Interfaces?
      </h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Connect with skilled frontend developers who can bring your designs to life with modern technologies and best practices.
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/contact" class="bg-white dark:bg-gray-800 text-black dark:text-white px-8 py-4 rounded-lg font-medium hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
          Get Frontend Developers
        </a>
        <div class="text-gray-400">
          Call: <a href="tel:+12029925235" class="text-white hover:text-gray-300">+1 (202) 992-5235</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>